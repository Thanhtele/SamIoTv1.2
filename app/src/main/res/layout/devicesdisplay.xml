<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="187dp"
    android:layout_height="116dp"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/backgroundLayout"
        android:layout_width="187dp"
        android:layout_height="116dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/custombackground"
        android:clickable="true"
        android:visibility="visible">

        <TextView
            android:id="@+id/deviceName"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="9dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="42dp"
            android:gravity="left"
            android:text="nameDevice"
            android:textSize="13dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iconDevice"
            android:layout_width="49dp"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="122dp"
            android:layout_marginBottom="69dp"
            android:contentDescription="@string/light"
            app:srcCompat="@drawable/light_off" />

        <ImageView
            android:id="@+id/connectStatus"
            android:layout_width="32dp"
            android:layout_height="23dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="14dp"
            android:contentDescription="@string/light"
            app:srcCompat="@drawable/status_offline" />

        <TextView
            android:id="@+id/onOffStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal|fill_horizontal"
            android:text="Offline" />

        <ImageButton
            android:id="@+id/btPower"
            android:layout_width="49dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="65dp"
            android:background="@drawable/power_off"
            tools:srcCompat="@null" />

        <TextView
            android:id="@+id/sensorValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="75dp"
            android:gravity="right"
            android:textSize="16dp" />

        <SeekBar
            android:id="@+id/drawValue"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="65dp"
            android:max="100"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:progress="0"
            android:progressBackgroundTintMode="src_in"
            android:thumbTint="#08E6B2" />

        <TextView
            android:id="@+id/irValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/deviceName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="14dp"
            android:text="24Â°C"
            android:textSize="18sp" />


    </RelativeLayout>


</LinearLayout>